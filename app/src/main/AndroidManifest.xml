<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.clips.view.activity">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.clips.view.activity.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="adjustPan">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.clips.view.activity.PrefActivity"
            android:label="@string/title_activity_preferences">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.clips.view.activity.MainActivity" />
        </activity>
        <activity
            android:name="com.clips.view.activity.HelpActivity"
            android:label="@string/title_activity_help"
            android:parentActivityName="com.clips.view.activity.MainActivity" />
        <activity
            android:name="com.clips.view.activity.MapManager"
            android:label="Gestione mappe"
            android:parentActivityName="com.clips.view.activity.MainActivity" />
    </application>

</manifest>
